page {
  width: 100%;
  height: 100%;
}

.myCanvas {
  z-index: 2;
  position: absolute;
  top: 200px;
  /* left: 100px; */
  left: 100100px;
}

.btn1 {
  position: absolute;
  top: 50rpx;
  left: 50px;
  width: 200rpx;
  height: 100rpx;
  background: gray;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
}

.loadding {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 45%;
  left: 50%;
  margin-top: -75rpx;
  margin-left: -75rpx;
}

.map_out {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
}

#map {
  position: relative;
  z-index: 4;
}

.map_container {
  width: 640rpx;
  height: 800rpx;
  position: absolute;
  top: 183rpx;
  left: 55rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.mapc_title {
  position: relative;
  height: 146rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.line {
  background: rgba(26, 30, 59, 0.40);
  height: 8rpx;
  border-radius: 100rpx;
  width: 260rpx;
}

.title {
  font-size: 38rpx;
  color: #1a1e3b;
  font-weight: 600;
  width: 162rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.mapc_center {
  width: 544rpx;
  height: 600rpx;
  overflow-y: scroll;
}

.mapc_item {
  width: 100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  margin-bottom: 58rpx;
}

.mapci_left {
  position: relative;
}

.mapci_right {
  width: 446rpx;
  height: 98rpx;
  display: flex;
  align-items: center;
}

.mapci_label {
  font-size: 34rpx;
  color: #1a1e3b;
  margin-left: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.user_img {
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
}

.sex_img {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.bottom {
  height: 108rpx;
  width: 100%;
  background: #6db9ff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bot_left {
  width: 15%;
  height: 44rpx;
  border-right: 2rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bot_left>image {
  width: 40rpx;
  height: 40rpx;
}

.bottomShare {
  height: 108rpx;
  width: 85%;
  padding: 0px;
  margin: 0px;
  box-sizing: border-box;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 0px;
  z-index: 2;
  background: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottomShare>image {
  width: 42rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.bottomShare::after {
  border: none;
}

.hifi {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 3;
}
